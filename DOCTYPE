<body>

  <progress></progress>

  <script>
    // How many indicators on each side?
var inum = 12;

var loaders = document.getElementsByTagName("progress");
for (var i=0; i<loaders.length; i++) {

	// Create the new loader:

	// Need a container:
	var newloader = document.createElement("div");
	newloader.className = "loader";

	// Create indicators:
	for (var j=0; j<2; j++) {

		// Pick a side:
		var side = ( j === 0 ? "left" : "right");

		for (var k=0; k<inum; k++) {

			// Create the spoke:
			var spoke = document.createElement("div");
			spoke.className = "spoke--" + side + "-" + k;

			// Add this one to the loader:
			newloader.appendChild(spoke);

			// Create the indicator:
			var indicator = document.createElement("div");
			indicator.className = "indicator--" + side + "-" + k;

			// And put it in the indicator container:
			spoke.appendChild(indicator);			

		}

	}

	// Get the parent node of the progress indicator:
	var parent = loaders[i].parentNode;

	// Replace the original progress indicator with the new one:
	parent.replaceChild(newloader, loaders[i]);
}
    //@ sourceURL=pen.js
  </script>


